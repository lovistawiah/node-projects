<!-- form handling -->
<form method="post" action="/api/users" id="add_user">
    <div id="add_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" id="" placeholder="Lovis Tawiah">
        </div>
        <div class="form-group">
            <label for="email" class="text-light">Email</label>
            <input type="text" name="email" id="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <input type="radio" name="gender" checked value="Male">
                <label for="gender" class="text-light">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" name="gender" value="Female">
                <label for="gender" class="text-light">Female</label>
            </div>
        </div>
        <div class="form-group">
            <label for="status" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" name="status" checked value="Active">
                <label for="status" class="text-light">Active</label>
            </div>
            <div class="radio inline">
                <input type="radio" name="status" value="Inactive">
                <label for="gender" class="text-light">Inactive</label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Submit</button>
        </div>
    </div>
</form>